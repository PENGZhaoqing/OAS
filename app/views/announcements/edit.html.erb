<div class="row">

  <div class="col-sm-2">
    <%= render 'announcements/navside' %>
  </div>

  <div class="col-sm-10">

    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-users fa-fw"></i> 编辑公告

      </div>
      <div class="panel-body" style="min-height: 450px">
        <%= form_for @announcement,url: announcement_path(@announcement), method: :patch,html: {role: 'form'} do |f| %>
            <%= render 'shared/error_messages', :object => @announcement %>
            <div class=" col-sm-12">
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">公告标题</div>
                  <%= f.text_field :title, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">公告正文</div>
                  <%= f.text_area :content, class: 'form-control' ,rows: 25%>
                </div>
              </div>
              <br>
              <div class="form-group">
                <%= f.submit '更新', class: "btn btn-info btn-block" %>
              </div>
              <div class="form-group">
                <%= link_to '取消', announcements_path, :class => "btn btn-default btn-block" %>
              </div>
              <br>
            </div>
        <% end %>

      </div>
    </div>


  </div>

</div>



