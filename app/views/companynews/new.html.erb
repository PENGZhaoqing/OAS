<div class="row">

  <div class="col-sm-2">
    <%= render 'announcements/navside' %>
  </div>

  <div class="col-sm-10">

    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-users fa-fw"></i> 新增公司新闻

      </div>
      <div class="panel-body" style="min-height: 450px">
        <%= form_for @companynews, url: companynews_index_path, html: {class: 'form-horizontal', role: 'form'} do |f| %>
            <%= render 'shared/error_messages', :object => @companynews %>
            <div class=" col-sm-12"><br/><br/>

              <div class="form-group">

                <div class="input-group">
                  <div class="input-group-addon">标&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;题</div>
                  <%= f.text_field :title, class: 'form-control', placeholder: "输入新闻标题" %>
                </div>
              </div>

              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">正&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;文</div>
                  <%= f.text_area :content, class: 'form-control',rows: 30, placeholder: "输入新闻正文" %>
                </div>
              </div>




              <div class="form-group">
                <%= f.submit '添加', class: "btn btn-primary btn-block" %>
              </div>

              <div class="form-group">
                <%= link_to '取消', companynews_index_path, :class => "btn btn-default btn-block" %>
              </div>
            </div>

        <% end %>

      </div>
    </div>


  </div>

</div>



