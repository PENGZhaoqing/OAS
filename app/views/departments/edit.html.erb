<div class="row">

  <div class="col-sm-2">
    <%= render 'announcements/navside' %>
  </div>

  <div class="col-sm-10">

    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-users fa-fw"></i> 编辑部门信息

      </div>
      <div class="panel-body" style="min-height: 450px">
        <%= form_for @department,url: department_path(@department), method: :patch,html: {role: 'form'} do |f| %>
            <%= render 'shared/error_messages', :object => @department %>
            <div class=" col-sm-12">
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">部门名称</div>
                  <%= f.text_field :name, class: 'form-control' %>
                </div>
              </div><br>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">办公地址</div>
                  <%= f.text_field :office_address, class: 'form-control'%>
                </div>
              </div><br>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">办公电话</div>
                  <%= f.text_field :office_number, class: 'form-control' %>
                </div>
              </div><br>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">目前人数</div>
                  <%= f.text_field :number_of_people, class: 'form-control'%>
                </div>
              </div>
              <br>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">部门概况</div>
                  <%= text_area_tag :article, raw(@department.article.content),class: 'form-control',rows:20 %>
                </div>
              </div>
              <br>
              <div class="form-group">
                <%= f.submit '更新', class: "btn btn-info btn-block" %>
              </div>
              <div class="form-group">
                <%= link_to '取消', departments_path, :class => "btn btn-default btn-block" %>
              </div>
              <br>
            </div>
        <% end %>

      </div>
    </div>


  </div>

</div>



