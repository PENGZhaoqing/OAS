<div class="row">

  <div class="col-sm-2">
    <%= render 'announcements/navside' %>
  </div>

  <div class="col-sm-10">

    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-users fa-fw"></i> 新增部门

      </div>
      <div class="panel-body" style="min-height: 450px">
        <%= form_for @department, url: departments_path, html: {class: 'form-horizontal', role: 'form'} do |f| %>
            <%= render 'shared/error_messages', :object => @department %>
            <div class=" col-sm-12"><br/><br/>

              <div class="form-group">

                <div class="input-group">
                  <div class="input-group-addon">部门名称</div>
                  <%= f.text_field :name, class: 'form-control', placeholder: "输入部门名称" %>
                </div>
              </div>

              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">办公地址</div>
                  <%= f.text_field :office_address, class: 'form-control', placeholder: "输入办公地址" %>
                </div>
              </div>

              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">办公电话</div>
                  <%= f.text_field :office_number, class: 'form-control', placeholder: "输入办公电话" %>
                </div>
              </div>

              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">目前人数</div>
                  <%= f.text_field :number_of_people, class: 'form-control', placeholder: "输入目前人数" %>
                </div>
              </div>



              <div class="form-group">
                <%= f.submit '添加', class: "btn btn-primary btn-block" %>
              </div>

              <div class="form-group">
                <%= link_to '取消', departments_path, :class => "btn btn-default btn-block" %>
              </div>
            </div>

        <% end %>

      </div>
    </div>


  </div>

</div>



